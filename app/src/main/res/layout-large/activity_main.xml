<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:openDrawer="start">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <!--           Upper linear layout for scrollview-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/custom"
                android:orientation="vertical"
                android:padding="0dp"
                android:weightSum="3">


                <com.smarteist.autoimageslider.SliderView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    android:id="@+id/image_slider"
                    app:sliderAnimationDuration="600"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderAutoCycleEnabled="true"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="15dp"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="3dp"
                    app:sliderIndicatorRadius="2dp"
                    app:sliderIndicatorSelectedColor="#63F13B"
                    app:sliderIndicatorUnselectedColor="#F8F5F5"
                    app:sliderStartAutoCycle="true"
                    />


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="250dp">


                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <androidx.cardview.widget.CardView

                            android:layout_width="450dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="25sp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#000000"
                                android:gravity="center"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="7dp"
                                    android:gravity="center"
                                    android:text="COMPUTER OFFICE APPLICATION"
                                    android:textColor="#FB1212"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="4500/-\nTHREE MONTHS"
                                    android:textColor="#F8F4F4"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="70dp"
                                    android:layout_height="1dp"
                                    android:layout_margin="10dp"
                                    android:background="#F4EFF3" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="✓MS Word, Excel, Power Point\n✓English and Bangla Type\n✓Basic Internet and Online\n✓Hardware and Software Concept"
                                    android:textAlignment="center"
                                    android:textColor="#FFFDFD"
                                    android:textSize="11sp"

                                    />


                                <Button
                                    android:id="@+id/button1"
                                    android:layout_width="190sp"
                                    android:layout_height="40sp"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/button_back"
                                    android:text="Get Started"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    app:backgroundTint="@color/yellow"
                                    android:layout_marginBottom="5dp"/>


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView

                            android:layout_width="450dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="25sp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#FA050D"
                                android:gravity="center"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:text="DIGTAL MARKETING WITH FREELANCING"
                                    android:textColor="#151414"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="10,000/-\nFOUR MONTHS"
                                    android:textColor="#F8F4F4"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />


                                <View
                                    android:layout_width="70dp"
                                    android:layout_height="1dp"
                                    android:layout_margin="10dp"
                                    android:background="#FAF6F6" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="✓Facebook Ads/Google Ads\n✓All Social Media Ads\n✓E-mail Marketing\n✓Marketplace # Fiverr"
                                    android:textAlignment="center"
                                    android:textColor="#F8F0F0"
                                    android:textSize="11sp"

                                    />

                                <Button
                                    android:id="@+id/button2"
                                    android:layout_width="190sp"
                                    android:layout_height="40sp"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/button_back"
                                    android:text="Get Started"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:layout_marginBottom="4dp"
                                    app:backgroundTint="@color/yellow" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView

                            android:layout_width="450dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="25sp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#0C0C0C"
                                android:gravity="center"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="7dp"
                                    android:gravity="center"
                                    android:text="GRAPHIC DESIGN WITH FREELANCING"
                                    android:textColor="#FDDF1B"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="12,000/-\nFOUR MONTHS"
                                    android:textColor="#F8F4F4"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />


                                <View
                                    android:layout_width="70dp"
                                    android:layout_height="1dp"
                                    android:layout_margin="10dp"
                                    android:background="#FAF5F5" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="✓Illustrator and Photoshop\n✓T-Shirt Design\n✓Flyer and Brochure Design\n✓Fiverr # Freelancer # Design Hill"
                                    android:textAlignment="center"
                                    android:textColor="#F8F0F0"
                                    android:textSize="11sp"


                                    />


                                <Button
                                    android:id="@+id/button3"
                                    android:layout_width="190sp"
                                    android:layout_height="40sp"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/button_back"
                                    android:text="Get Started"
                                    android:textAllCaps="false"
                                    android:layout_marginBottom="4dp"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    app:backgroundTint="@color/yellow" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                </HorizontalScrollView>


                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1.2"
                    android:clipToPadding="false"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <Button
                        android:layout_width="190sp"
                        android:layout_height="40sp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/button_back"
                        android:text="@string/testemonial"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:layout_marginBottom="55dp"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        app:backgroundTint="@color/skyBlue" />

                </LinearLayout>

<!--                <me.biubiubiu.justifytext.library.JustifyTextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="280dp"-->
<!--                    android:layout_marginStart="50dp"-->
<!--                    android:layout_marginTop="5dp"-->
<!--                    android:gravity="center"-->
<!--                    android:textSize="18sp"-->
<!--                    android:text="@string/description" />-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#FBFBFB"
                    android:textSize="18sp"
                    android:paddingRight="5dp"
                    android:text="@string/description"/>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="90dp"
                    android:layout_height="86dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/emran"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigationId"
        android:background="@android:color/white"
        app:menu="@menu/nav_menu_layout"
        android:layout_gravity = "start"
        app:headerLayout="@layout/nav_header"
        android:backgroundTint="#87CEFA"
        android:fitsSystemWindows="true"
        android:isScrollContainer="true">

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>

